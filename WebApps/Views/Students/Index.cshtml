<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<meta name='viewport' content='width=device-width, initial-scale=1'>
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<link href='https://fonts.googleapis.com/css?family=Oswald' rel='stylesheet'>

@model IEnumerable<WebApps.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<header class="text-center jumbotron justify-content-center">
    <h1 class="display-4"> STUDENTS LIST </h1>
    <h2> By. Martin Konecny </h2>
</header>

<p>
    <a asp-action="Create" button type="button" class="btn">Create New</a>
    <a asp-action="Analyse" button type="button" class="btn">Analyse Grades</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mark)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>
            <td>
                <a button type="button" class="btn" asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                <a button type="button" class="btn"  asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                <a button type="button" class="btn" asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
